[data-turn='is_my-turn']
[data-turn='is_enemy-turn']
[data-turn='is_server-turn']
  width 100%
  height 40px
  text-align center
  line-height: calc(40px - 6px)

[data-turn='is_enemy-turn']
  color darken(cred, 30)
  background lighten(cred, 30)
  border 3px solid lighten(cred, 10)
  border-radius 3px

[data-turn='is_my-turn']
  color darken(cgreen, 30)
  background lighten(cgreen, 30)
  border 3px solid lighten(cgreen, 10)
  border-radius 3px

[data-turn='is_server-turn']
  color darken(corange, 30)
  background lighten(corange, 30)
  border 3px solid lighten(corange, 10)
  border-radius 3px

[data-veto='is_ban']
[data-veto='is_pick']
[data-veto='is_server']
  border 3px solid
  border-radius 6px

[data-veto='is_ban']
  border-color darken(cred, 10)

[data-veto='is_pick']
  border-color lighten(ccyan, 20)

[data-veto='is_server']
  border-color corange

#veto-img img[data-veto='is_ban']
#veto-img img[data-veto='is_pick']
#veto-img img[data-veto='is_server']
  height 124px
  transition opacity .3s .2s, border .3s .2s
  pointer-events none
  opacity 0.7

#veto-img img[data-veto='is_server']
  opacity 1